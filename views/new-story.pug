extends layout.pug


block content
    .nav-bar
        button.nav-bar__sign-up-btn Sign Up
        button.nav-bar__log-in-btn Log In
    .errors-container
    .new-story-form-container
        form(class="create-form")
            .form-group
                label(for="title") Title
                input(type="text", name="title", placeholder="Title")
            .form-group
                label(for="subtitle") Subheader
                input(type="text", name="subtitle", placeholder="Subheader")
            .form-group
                label(for="content")
                input(type="content", name="content", placeholder="Tell your story...")
            button(type="submit") Publish

