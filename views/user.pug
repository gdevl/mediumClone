extends layout

block content
  .screen
    .home-grid-section
      .user-grid-container
        .user-grid
          .userProfile
            .userProfile__header
              h2.userName= storiesData[0].authorName
              .user-followButton-container
                .user-followButton
                  if user
                    button#follow(value=`${storiesData[0].authorId}`) Follow
                  else
                    button#follow(class="hidden" value=`${storiesData[0].authorId}`) Follow
            .userDetails
              p.userBio= storiesData[0].bio
              img(src=`${storiesData[0].avatarUrl}`).userAvatar
          .user-feed-container
              include includes/feed
  script(type="module" src="/js/follow.js")